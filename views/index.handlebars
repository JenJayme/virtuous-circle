<div class="row">
    <div class="col s6">
        <h3>Offered</h3>
        <ul class="offered">
            {{#each foodbundles}}
                {{#unless claimed}}
                    {{> bundle-block claimed=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col s6">
        <h3>Claimed</h3>

        <ul class="claimed">
            {{#each foodbundles}}
                {{#if claimed}}
                    {{> bundle-block claimed=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>


<!-- Modal Structure -->
<div id="addModal" class="modal">
    <div class="modal-content">
        <h2>Add A Bundle</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="offered">What kind of food supplies would you like to offer?</label><br>

                <input id="inputBox" type="text" name="bundle_name" placeholder="What is it?"></div>
            <input id="quantityInputBox" type="text" name="quantity"
                placeholder="How much or how many, in boxes, cans, cases?"><br>

            <button class="btn waves-effect waves-light" type="submit" name="action">submit
                <i class="material-icons right">send</i>
            </button>
            <div class="col s4"></div>
        </form>
    </div>

    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close Without Adding</a>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <!-- Modal Trigger -->
        <button id="openModalBtn" data-target="addModal" class="btn modal-trigger center-align">Add A Food
            Bundle</button>
    </div>
</div>


</div>